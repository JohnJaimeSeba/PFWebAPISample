@page "/messages"
@using static Microsoft.Maui.ApplicationModel.Permissions


<h3>Messages</h3>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Message UI</title>
    <style>
        * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
        background-color: #f5f7fb;
        height: 100vh;
        display: flex;
        flex-direction: column;
        }

        .app-container {
        display: flex;
        height: 100%;
        overflow: hidden;
        }

        .sidebar {
        width: 280px;
        background-color: #ffffff;
        border-right: 1px solid #e1e4e8;
        display: flex;
        flex-direction: column;
        }

        .profile-header {
        padding: 20px;
        display: flex;
        align-items: center;
        border-bottom: 1px solid #e1e4e8;
        }

        .profile-img {
        width: 44px;
        height: 44px;
        border-radius: 50%;
        background-color: #6366f1;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 16px;
        }

        .profile-info {
        margin-left: 12px;
        }

        .profile-name {
        font-weight: 600;
        font-size: 16px;
        }

        .profile-status {
        font-size: 13px;
        color: #4b5563;
        }

        .search-box {
        padding: 15px;
        border-bottom: 1px solid #e1e4e8;
        }

        .search-input {
        width: 100%;
        padding: 10px 15px;
        border-radius: 20px;
        border: 1px solid #e1e4e8;
        background-color: #f5f7fb;
        font-size: 14px;
        }

        .conversation-list {
        overflow-y: auto;
        flex-grow: 1;
        }

        .conversation-item {
        padding: 15px 20px;
        border-bottom: 1px solid #e1e4e8;
        cursor: pointer;
        transition: background-color 0.2s;
        }

        .conversation-item:hover {
        background-color: #f8fafc;
        }

        .conversation-item.active {
        background-color: #eff6ff;
        border-left: 3px solid #6366f1;
        }

        .conversation-top {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
        }

        .conversation-name {
        font-weight: 600;
        font-size: 15px;
        }

        .conversation-time {
        font-size: 12px;
        color: #6b7280;
        }

        .conversation-message {
        font-size: 13px;
        color: #4b5563;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        }

        .unread-indicator {
        background-color: #6366f1;
        color: white;
        border-radius: 10px;
        padding: 2px 8px;
        font-size: 12px;
        margin-left: 8px;
        }

        .chat-container {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        background-color: #ffffff;
        }

        .chat-header {
        padding: 15px 20px;
        border-bottom: 1px solid #e1e4e8;
        display: flex;
        justify-content: space-between;
        align-items: center;
        }

        .chat-header-info {
        display: flex;
        align-items: center;
        }

        .chat-profile-img {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #6366f1;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 16px;
        }

        .chat-profile-text {
        margin-left: 12px;
        }

        .chat-header-name {
        font-weight: 600;
        font-size: 16px;
        }

        .chat-header-status {
        font-size: 13px;
        color: #10b981;
        }

        .chat-header-actions {
        display: flex;
        gap: 15px;
        }

        .action-button {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f3f4f6;
        cursor: pointer;
        transition: background-color 0.2s;
        }

        .action-button:hover {
        background-color: #e5e7eb;
        }

        .chat-messages {
        flex-grow: 1;
        padding: 20px;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 15px;
        }

        .message {
        max-width: 70%;
        padding: 12px 16px;
        border-radius: 18px;
        font-size: 14px;
        line-height: 1.5;
        }

        .message-time {
        font-size: 11px;
        margin-top: 4px;
        color: #6b7280;
        }

        .message-container {
        display: flex;
        flex-direction: column;
        }

        .message-received-container {
        align-self: flex-start;
        }

        .message-sent-container {
        align-self: flex-end;
        }

        .message-received {
        background-color: #f3f4f6;
        border-bottom-left-radius: 5px;
        }

        .message-sent {
        background-color: #6366f1;
        color: white;
        border-bottom-right-radius: 5px;
        }

        .message-sent .message-time {
        color: rgba(255, 255, 255, 0.8);
        text-align: right;
        }

        .chat-input-container {
        padding: 15px 20px;
        border-top: 1px solid #e1e4e8;
        display: flex;
        align-items: center;
        gap: 10px;
        }

        .chat-input {
        flex-grow: 1;
        padding: 12px 20px;
        border-radius: 24px;
        border: 1px solid #e1e4e8;
        background-color: #f3f4f6;
        font-size: 14px;
        outline: none;
        }

        .input-actions {
        display: flex;
        gap: 10px;
        }

        .input-action-button {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f3f4f6;
        cursor: pointer;
        transition: background-color 0.2s;
        }

        .input-action-button:hover {
        background-color: #e5e7eb;
        }

        .send-button {
        background-color: #6366f1;
        color: white;
        }

        .send-button:hover {
        background-color: #4f46e5;
        }

        .date-divider {
        display: flex;
        align-items: center;
        margin: 15px 0;
        color: #6b7280;
        font-size: 12px;
        }

        .date-divider::before,
        .date-divider::after {
        content: "";
        flex: 1;
        border-bottom: 1px solid #e5e7eb;
        }

        .date-divider::before {
        margin-right: 10px;
        }

        .date-divider::after {
        margin-left: 10px;

        Media screen and (max-width: 768px), (max-width: 768px) {
            }
        .sidebar {
                width: 100%;
                position: absolute;
                height: 100%;
                z-index: 10;
                transform: translateX(-100%);
                transition: transform 0.3s ease;
            }

            .sidebar.active {
                transform: translateX(0);
            }

            .message {
                max-width: 85%;
            }
        }
    </style>
</head>
<body>
    <div class="app-container">
        <div class="sidebar">
            <div class="profile-header">
                <div class="profile-img">JS</div>
                <div class="profile-info">
                    <div class="profile-name">John Jaime</div>
                    <div class="profile-status">Available</div>
                </div>
            </div>

            <div class="search-box">
                <input type="text" class="search-input" placeholder="Search messages...">
            </div>

            <div class="conversation-list">
                <div class="conversation-item active">
                    <div class="conversation-top">
                        <div class="conversation-name">Tomjames Padrones <span class="unread-indicator">3</span></div>
                        <div class="conversation-time">9:41 AM</div>
                    </div>
                    <div class="conversation-message">Hey! Are we still meeting for coffee today?</div>
                </div>

                <div class="conversation-item">
                    <div class="conversation-top">
                        <div class="conversation-name">Design Team</div>
                        <div class="conversation-time">Yesterday</div>
                    </div>
                    <div class="conversation-message">Alex: I've uploaded the latest mockups to the shared folder</div>
                </div>

                <div class="conversation-item">
                    <div class="conversation-top">
                        <div class="conversation-name">Peter Antonio</div>
                        <div class="conversation-time">Apr 26</div>
                    </div>
                    <div class="conversation-message">Thanks for sending over the document. I'll review it tonight.</div>
                </div>

                <div class="conversation-item">
                    <div class="conversation-top">
                        <div class="conversation-name">John Lou</div>
                        <div class="conversation-time">Apr 24</div>
                    </div>
                    <div class="conversation-message">Did you see the latest project requirements? They've changed again.</div>
                </div>

                <div class="conversation-item">
                    <div class="conversation-top">      
                        <div class="conversation-time">Apr 22</div>
                    </div>
                    <div class="conversation-message">New features released: Dark mode is now available in all plans!</div>
                </div>

                <div class="conversation-item">
                    <div class="conversation-top">
                        <div class="conversation-name">Jose David</div>
                        <div class="conversation-time">Apr 20</div>
                    </div>
                    <div class="conversation-message">Let me know when you're free to discuss the proposal.</div>
                </div>

                <div class="conversation-item">
                    <div class="conversation-top">
                        <div class="conversation-name">Marketing Team</div>
                        <div class="conversation-time">Apr 18</div>
                    </div>
                    <div class="conversation-message">Juliuz: Here's the social media calendar for next month</div>
                </div>
            </div>
        </div>

        <div class="chat-container">
            <div class="chat-header">
                <div class="chat-header-info">
                    <div class="chat-profile-img">TP</div>
                    <div class="chat-profile-text">
                        <div class="chat-header-name">Tomjames Padrones</div>
                        <div class="chat-header-status">Online</div>
                    </div>
                </div>

                <div class="chat-header-actions">
                    <div class="action-button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M15.05 5A5 5 0 0 1 19 8.95M15.05 1A9 9 0 0 1 23 8.94m-1 7.98v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                        </svg>
                    </div>
                    <div class="action-button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M23 7l-7 5 7 5V7z"></path>
                            <rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect>
                        </svg>
                    </div>
                    <div class="action-button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="1"></circle>
                            <circle cx="19" cy="12" r="1"></circle>
                            <circle cx="5" cy="12" r="1"></circle>
                        </svg>
                    </div>
                </div>
            </div>

            <div class="chat-messages">
                <div class="date-divider">Today</div>

                <div class="message-container message-received-container">
                    <div class="message message-received">
                        Good morning! Hope you're doing well. Are we still meeting for coffee at 11?
                    </div>
                    <div class="message-time">9:15 AM</div>
                </div>

                <div class="message-container message-sent-container">
                    <div class="message message-sent">
                        Morning Tomjames! Yes, still on for 11am at Riverside Cafe.
                    </div>
                    <div class="message-time">9:20 AM</div>
                </div>

                <div class="message-container message-received-container">
                    <div class="message message-received">
                        Perfect! I wanted to discuss some ideas for the new project. I've been thinking about a different approach that might work better.
                    </div>
                    <div class="message-time">9:22 AM</div>
                </div>

                <div class="message-container message-received-container">
                    <div class="message message-received">
                        Also, did you get a chance to review the document I sent yesterday?
                    </div>
                    <div class="message-time">9:23 AM</div>
                </div>

                <div class="message-container message-sent-container">
                    <div class="message message-sent">
                        Sounds interesting, looking forward to hearing your ideas! And yes, I did review the document. I have some feedback we can discuss when we meet.
                    </div>
                    <div class="message-time">9:30 AM</div>
                </div>

                <div class="message-container message-received-container">
                    <div class="message message-received">
                        Great! See you at 11 then. Don't forget to bring your laptop so we can go through the designs together.
                    </div>
                    <div class="message-time">9:32 AM</div>
                </div>

                <div class="message-container message-sent-container">
                    <div class="message message-sent">
                        Will do! See you soon.
                    </div>
                    <div class="message-time">9:41 AM</div>
                </div>
            </div>

            <div class="chat-input-container">
                <div class="input-actions">
                    <div class="input-action-button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"></path>
                        </svg>
                    </div>
                    <div class="input-action-button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                            <circle cx="8.5" cy="8.5" r="1.5"></circle>
                            <polyline points="21 15 16 10 5 21"></polyline>
                        </svg>
                    </div>
                </div>

                <input type="text" class="chat-input" placeholder="Type a message...">

                <div class="input-action-button send-button">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="22" y1="2" x2="11" y2="13"></line>
                        <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                    </svg>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
